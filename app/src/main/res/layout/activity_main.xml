<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/batteryPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Percentage: 0%"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/chargingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging Time: N/A"
        android:textSize="20sp"
        android:layout_below="@+id/batteryPercentage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/dischargingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discharging Time: N/A"
        android:textSize="20sp"
        android:layout_below="@+id/chargingTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
